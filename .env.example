# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# WebSocket Server Configuration
WS_SERVER_HOST=0.0.0.0
WS_SERVER_PORT=8765
WS_AUTH_PASSWORD=your_secure_password_here

# Query Configuration
QUERY_INTERVAL_SECONDS=30
SIGNAL_WINDOW_MINUTES=32

# Hybrid Mode Configuration (NOTIFY + Polling)
USE_NOTIFY=true
NOTIFY_CHANNEL=new_signals
LIGHTWEIGHT_CHECK_INTERVAL=1
NOTIFY_FALLBACK_INTERVAL=60

# Exchange Control
# Enable/disable signals from specific exchanges
BINANCE_ENABLED=true
BYBIT_ENABLED=true
